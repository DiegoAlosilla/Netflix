@model IEnumerable<Netflix.Models.Pelicula>

@{
    ViewData["Title"] = "Recomendar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Peliculas Recomendadas</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdMovie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titles)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdMovie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titles)
            </td>
        </tr>
}
    </tbody>
</table>
